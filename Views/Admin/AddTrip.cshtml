@model MVC_project.ViewModels.AddTripViewModel

@{
    ViewData["Title"] = "Add New Trip";
}

<style>
    /* Animated Background */
    .addtrip-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(-45deg, #6366f1, #3730a3, #a78bfa, #6366f1);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        z-index: -1;
    }

    @@keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    /* Floating particles background effect */
    .particle {
        position: fixed;
        pointer-events: none;
        opacity: 0.5;
        animation: float 20s infinite linear;
        z-index: -1;
    }

    @@keyframes float {
        0% {
            transform: translate(0, 0) rotate(0deg);
            opacity: 0;
        }
        10% {
            opacity: 0.5;
        }
        90% {
            opacity: 0.5;
        }
        100% {
            transform: translate(100px, -100vh) rotate(360deg);
            opacity: 0;
        }
    }

    /* Form container */
    .addtrip-container {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        overflow-y: auto;
    }

    /* Enhanced card styling */
    .addtrip-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 2rem;
        padding: 2.5rem;
        max-width: 700px;
        width: 100%;
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 20px 70px rgba(0, 0, 0, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.5);
        animation: slideInUp 0.8s ease-out;
        position: relative;
        overflow: hidden;
        margin: 2rem auto;
    }

    /* Glowing border effect */
    .addtrip-card::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        animation: shine 3s infinite;
        pointer-events: none;
    }

    @@keyframes shine {
        0% { transform: translate(-100%, -100%) rotate(0deg); }
        100% { transform: translate(100%, 100%) rotate(0deg); }
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Typography */
    .form-title {
        color: #1e293b;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .form-subtitle {
        color: #64748b;
        text-align: center;
        margin-bottom: 2rem;
        font-size: 1rem;
    }

    /* Form styling */
    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        color: #334155;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
        font-size: 0.95rem;
    }

    .form-label i {
        margin-right: 0.5rem;
        color: #6366f1;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 0.85rem 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 0.75rem;
        font-size: 1rem;
        color: #1e293b !important;
        transition: all 0.3s ease;
        background: white;
    }

    .form-control::placeholder {
        color: #94a3b8;
        opacity: 1;
    }

    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        color: #1e293b !important;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 120px;
        color: #1e293b !important;
    }

    textarea.form-control::placeholder {
        color: #94a3b8;
        opacity: 1;
    }

    /* Two column layout for dates and numbers */
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    @@media (max-width: 576px) {
        .form-row {
            grid-template-columns: 1fr;
        }
    }

    /* Button styling */
    .btn-submit {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 1rem;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
        width: 100%;
        margin-top: 1rem;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.6);
        background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);
    }

    .btn-back {
        background: linear-gradient(135deg, #64748b 0%, #475569 100%);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(100, 116, 139, 0.4);
        width: 100%;
        margin-top: 0.5rem;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

    .btn-back:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(100, 116, 139, 0.6);
        background: linear-gradient(135deg, #475569 0%, #334155 100%);
        color: white;
    }

    /* Validation error styling */
    .text-danger {
        color: #dc2626;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .input-validation-error {
        border-color: #dc2626 !important;
    }

    .validation-summary-errors {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        border: 1px solid #fca5a5;
        border-radius: 1rem;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .validation-summary-errors ul {
        margin: 0;
        padding-left: 1.5rem;
    }

    .validation-summary-errors li {
        color: #991b1b;
        font-weight: 500;
    }

    /* File upload styling */
    .file-upload-wrapper {
        position: relative;
    }

    .file-upload-label {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        border: 2px dashed #cbd5e1;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.3s ease;
        background: #f8fafc;
    }

    .file-upload-label:hover {
        border-color: #6366f1;
        background: #f1f5f9;
    }

    .file-upload-label i {
        font-size: 2rem;
        color: #6366f1;
        display: block;
        margin-bottom: 0.5rem;
    }

    input[type="file"] {
        display: none;
    }

    /* Upload success/status UI */
    /* Use CSS Grid so the check icon remains fixed while message/thumbs grow */
    .upload-status {
        position: relative;
        display: grid;
        grid-template-columns: 36px 1fr auto auto;
        gap: 0.6rem;
        align-items: center;
        width: 100%;
        margin-top: 0.75rem;
        background: rgba(16,185,129,0.06);
        color: #065f46;
        padding: 0.5rem 0.6rem;
        border-radius: 0.6rem;
        font-size: 0.95rem;
        box-shadow: 0 6px 18px rgba(16,185,129,0.04);
        opacity: 0;
        transform: translateY(6px);
        transition: all 0.28s cubic-bezier(.2,.9,.3,1);
    }
    .upload-status.show {
        transform: translateY(0);
        opacity: 1;
    }
    .upload-status .check {
        background: #10b981;
        color: white;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 0.95rem;
        flex: 0 0 auto;
    }
    .file-upload-label.success {
        border-color: #10b981;
        box-shadow: 0 10px 30px rgba(16,185,129,0.12);
    }
    .upload-status .upload-msg { grid-column: 2 / 3; min-width: 0; overflow: hidden; }
    .upload-status .thumbs {
        grid-column: 3 / 4;
        display: flex;
        gap: 0.4rem;
        align-items: center;
        flex-wrap: wrap;
        max-width: 320px;
        overflow: hidden;
    }
    .upload-status .thumbs img {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid rgba(0,0,0,0.06);
        box-shadow: 0 6px 18px rgba(16,185,129,0.06);
    }
    .upload-status .clear-upload {
        grid-column: 4 / 5;
        opacity: 0.9;
        display: none;
        background: transparent;
        border: none;
        padding: 0.2rem 0.4rem;
    }
    .upload-status.show .clear-upload { display: inline-flex; align-items:center; }
    .file-upload-label .label-main { font-weight:600; }
    .file-upload-label .file-count { color: #64748b; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 160px; display: inline-block; }
    .file-upload-label.success .file-count { color: #065f46; font-weight:600; }

    /* Responsive: stack status below the label on small screens */
    @@media (max-width: 576px) {
        .file-upload-label { flex-direction: column; align-items: flex-start; }
        .file-upload-label .file-count { max-width: 100%; }
        .upload-status { display: flex; flex-direction: column; gap: 0.5rem; }
        .upload-status .thumbs img { width: 34px; height: 34px; }
        .upload-status .thumbs { max-width: 100%; }
        .upload-status .clear-upload { margin-left: 0; }
    }

    /* Ensure upload message doesn't push the check icon when filenames are long */
    .upload-status .upload-msg { overflow: hidden; }
    .upload-title { display: block; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%; }
    .upload-sub { display: block; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; color: #065f46; opacity: 0.9; }
</style>

<!-- Animated Background -->
<div class="addtrip-bg"></div>

<!-- Floating particles -->
<script>
    for (let i = 0; i < 15; i++) {
        let particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.width = Math.random() * 5 + 2 + 'px';
        particle.style.height = particle.style.width;
        particle.style.left = Math.random() * 100 + '%';
        particle.style.background = 'white';
        particle.style.borderRadius = '50%';
        particle.style.animationDelay = Math.random() * 20 + 's';
        particle.style.animationDuration = Math.random() * 10 + 15 + 's';
        document.body.appendChild(particle);
    }
</script>

<div class="addtrip-container">
    <div class="addtrip-card">
        <h1 class="form-title">
            <i class="bi bi-airplane"></i> Add New Trip
        </h1>
        <p class="form-subtitle">Create an exciting new travel package</p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="validation-summary-errors"></div>
        }

        <form asp-action="AddTrip" asp-controller="Admin" method="post" enctype="multipart/form-data">
            <!-- Destination & Country -->
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Destination" class="form-label">
                        <i class="bi bi-geo-alt"></i> Destination
                    </label>
                    <input asp-for="Destination" class="form-control" placeholder="e.g., Paris, Tokyo, New York" />
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Country" class="form-label">
                        <i class="bi bi-flag"></i> Country
                    </label>
                    <input asp-for="Country" class="form-control" placeholder="e.g., France, Japan, USA" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>

            <!-- Travel Dates -->
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="StartDate" class="form-label">
                        <i class="bi bi-calendar-check"></i> Start Date
                    </label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate" class="form-label">
                        <i class="bi bi-calendar-x"></i> End Date
                    </label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Price & Rooms -->
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Price" class="form-label">
                        <i class="bi bi-currency-dollar"></i> Price
                    </label>
                    <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AvailableRooms" class="form-label">
                        <i class="bi bi-door-open"></i> Available Rooms
                    </label>
                    <input asp-for="AvailableRooms" type="number" min="0" class="form-control" placeholder="0" />
                    <span asp-validation-for="AvailableRooms" class="text-danger"></span>
                </div>
            </div>

            <!-- Discount Price & End Date (Optional) -->
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="DiscountPrice" class="form-label">
                        <i class="bi bi-tag"></i> Discount Price (Optional)
                    </label>
                    <input asp-for="DiscountPrice" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DiscountEndDate" class="form-label">
                        <i class="bi bi-calendar-event"></i> Discount End Date
                    </label>
                    <input asp-for="DiscountEndDate" type="date" class="form-control" />
                    <span asp-validation-for="DiscountEndDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Package Type & Age Limit -->
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="PackageType" class="form-label">
                        <i class="bi bi-box"></i> Package Type
                    </label>
                    <select asp-for="PackageType" class="form-select">
                        <option value="">-- Select Package Type --</option>
                        <option value="Family">Family</option>
                        <option value="Honeymoon">Honeymoon</option>
                        <option value="Adventure">Adventure</option>
                        <option value="Cruise">Cruise</option>
                        <option value="Luxury">Luxury</option>
                        <option value="Budget">Budget</option>
                        <option value="Group">Group</option>
                        <option value="Solo">Solo</option>
                    </select>
                    <span asp-validation-for="PackageType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AgeLimit" class="form-label">
                        <i class="bi bi-person-badge"></i> Age Limit (Optional)
                    </label>
                    <input asp-for="AgeLimit" type="number" min="0" class="form-control" placeholder="e.g., 18" />
                    <span asp-validation-for="AgeLimit" class="text-danger"></span>
                </div>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="form-label">
                    <i class="bi bi-card-text"></i> Description
                </label>
                <textarea asp-for="Description" class="form-control" rows="5" 
                          placeholder="Describe the trip package, highlights, activities, accommodations, etc."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Images Upload -->
            <div class="form-group">
                <label class="form-label">
                    <i class="bi bi-image"></i> Trip Images (Optional)
                </label>
                <div class="file-upload-wrapper">
                    <label for="imageUpload" class="file-upload-label">
                        <i class="bi bi-cloud-upload"></i>
                        <div>
                            <span class="label-main">Click to upload images</span>
                            <span class="file-count d-block small text-muted">No files</span>
                        </div>
                    </label>
                    <input id="imageUpload" asp-for="Images" type="file" multiple accept="image/*" />
                    <div id="uploadStatus" class="upload-status" aria-live="polite">
                        <span class="check"><i class="bi bi-check-lg"></i></span>
                        <div class="upload-msg">
                            <strong class="upload-title">No files</strong>
                            <div class="small text-muted upload-sub">Select images to upload</div>
                        </div>
                        <div class="thumbs" aria-hidden="true"></div>
                        <button type="button" class="btn btn-sm btn-link text-muted clear-upload" title="Clear selection" aria-label="Clear selected files">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Additional Date Variations -->
            <div class="form-group mt-4">
                <label class="form-label">
                    <i class="bi bi-calendar-range"></i> Additional Date Variations (Optional)
                </label>
                <p class="text-muted small mb-3">Add alternative dates for this trip to give customers more options</p>
                
                <div id="dateVariationsContainer">
                    <!-- Date variations will be added here -->
                </div>
                
                <button type="button" class="btn btn-outline-primary btn-sm" id="addDateVariation">
                    <i class="bi bi-plus-circle"></i> Add Date Variation
                </button>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-submit">
                <i class="bi bi-check-circle"></i> Create Trip Package
            </button>

            <!-- Back to Dashboard -->
            <a href="@Url.Action("Dashboard", "Admin")" class="btn-back">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    (function(){
        const input = document.getElementById('imageUpload');
        const status = document.getElementById('uploadStatus');
        const label = document.querySelector('.file-upload-label');
        const thumbs = status ? status.querySelector('.thumbs') : null;
        const uploadTitle = status ? status.querySelector('.upload-title') : null;
        const uploadSub = status ? status.querySelector('.upload-sub') : null;
        const clearBtn = status ? status.querySelector('.clear-upload') : null;
        const fileCountSpan = label ? label.querySelector('.file-count') : null;

        if (!input || !status || !label) return;

        function resetState() {
            input.value = '';
            if (thumbs) thumbs.innerHTML = '';
            if (uploadTitle) uploadTitle.textContent = 'No files';
            if (uploadSub) uploadSub.textContent = 'Select images to upload';
            if (fileCountSpan) fileCountSpan.textContent = 'No files';
            status.classList.remove('show');
            label.classList.remove('success');
        }

        function renderThumbnails(files) {
            if (!thumbs) return;
            thumbs.innerHTML = '';
            const maxThumbs = 6;
            files.slice(0, maxThumbs).forEach(file => {
                if (!file.type.startsWith('image/')) return;
                const img = document.createElement('img');
                img.alt = file.name;
                thumbs.appendChild(img);
                const reader = new FileReader();
                reader.onload = function(ev) { img.src = ev.target.result; };
                reader.readAsDataURL(file);
            });
            if (files.length > maxThumbs) {
                const more = document.createElement('div');
                more.textContent = `+${files.length - maxThumbs}`;
                more.style.fontSize = '0.85rem';
                more.style.color = '#065f46';
                thumbs.appendChild(more);
            }
        }

        function showStatus(files) {
            const count = files.length;
            const names = files.map(f => f.name);
            const preview = names.slice(0,3).join(', ') + (names.length > 3 ? '...' : '');

            if (uploadTitle) uploadTitle.textContent = count > 0 ? `${count} file${count>1?'s':''} selected` : 'No files';
            if (uploadSub) uploadSub.textContent = count > 0 ? preview : 'Select images to upload';
            if (fileCountSpan) fileCountSpan.textContent = count > 0 ? `${count} file${count>1?'s':''}` : 'No files';

            if (count > 0) {
                label.classList.add('success');
                renderThumbnails(files);
                status.classList.add('show');
            } else {
                resetState();
            }
        }

        input.addEventListener('change', function(e){
            const files = Array.from(input.files || []);
            showStatus(files);
        });

        if (clearBtn) {
            clearBtn.addEventListener('click', function(){
                resetState();
            });
        }

        // keyboard accessibility: clear on Escape when status visible
        document.addEventListener('keydown', function(e){
            if (e.key === 'Escape' && status.classList.contains('show')) resetState();
        });
    })();

    // Date Variations Management
    (function(){
        let dateVariationCount = 0;
        const container = document.getElementById('dateVariationsContainer');
        const addBtn = document.getElementById('addDateVariation');

        if (!container || !addBtn) return;

        function addDateVariation() {
            const index = dateVariationCount++;
            const variationHtml = `
                <div class="date-variation-item" data-index="${index}">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="mb-0"><i class="bi bi-calendar3"></i> Date Option ${index + 1}</h6>
                                <button type="button" class="btn btn-sm btn-danger remove-date-variation" data-index="${index}">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Start Date</label>
                                    <input type="date" name="AdditionalDates[${index}].StartDate" class="form-control" required />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">End Date</label>
                                    <input type="date" name="AdditionalDates[${index}].EndDate" class="form-control" required />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Available Rooms</label>
                                    <input type="number" name="AdditionalDates[${index}].AvailableRooms" class="form-control" min="0" value="10" required />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', variationHtml);
        }

        addBtn.addEventListener('click', addDateVariation);

        // Handle remove buttons using event delegation
        container.addEventListener('click', function(e) {
            const removeBtn = e.target.closest('.remove-date-variation');
            if (removeBtn) {
                const item = removeBtn.closest('.date-variation-item');
                if (item) {
                    item.style.animation = 'fadeOut 0.3s ease';
                    setTimeout(() => item.remove(), 300);
                }
            }
        });
    })();
</script>

<style>
    .date-variation-item {
        animation: slideInUp 0.3s ease;
    }

    .date-variation-item .card {
        border: 2px solid #e2e8f0;
        border-radius: 0.75rem;
        background: #f8fafc;
    }

    .date-variation-item .card:hover {
        border-color: #6366f1;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.1);
    }

    @@keyframes fadeOut {
        to {
            opacity: 0;
            transform: scale(0.95);
        }
    }
</style>
