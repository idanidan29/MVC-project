@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    // File input label update
    (function(){
        const input = document.getElementById('imageUpload');
        const fileCountSpan = document.querySelector('.file-count');
        
        if (input && fileCountSpan) {
            input.addEventListener('change', function(){
                const count = input.files.length;
                fileCountSpan.textContent = count > 0 ? `${count} new file${count > 1 ? 's' : ''} selected` : 'No new files selected';
            });
        }
    })();

    // Custom alert functions
    function showCustomAlert(title, message, type = 'warning') {
        const modal = document.getElementById('customAlertModal');
        const titleEl = document.getElementById('alertTitle');
        const messageEl = document.getElementById('alertMessage');
        const iconEl = document.getElementById('alertIcon');
        
        titleEl.textContent = title;
        messageEl.textContent = message;
        
        // Update icon based on type
        if (type === 'error') {
            iconEl.innerHTML = '<i class="bi bi-x-circle"></i>';
            iconEl.style.background = 'linear-gradient(135deg, #fee2e2 0%, #fca5a5 100%)';
            iconEl.style.color = '#dc2626';
        } else if (type === 'success') {
            iconEl.innerHTML = '<i class="bi bi-check-circle"></i>';
            iconEl.style.background = 'linear-gradient(135deg, #d1fae5 0%, #6ee7b7 100%)';
            iconEl.style.color = '#059669';
        } else {
            iconEl.innerHTML = '<i class="bi bi-exclamation-triangle"></i>';
            iconEl.style.background = 'linear-gradient(135deg, #fef3c7 0%, #fde047 100%)';
            iconEl.style.color = '#ca8a04';
        }
        
        modal.classList.add('show');
    }
    
    function closeCustomAlert() {
        document.getElementById('customAlertModal').classList.remove('show');
    }

    // Delete image function
    function deleteImage(imageId) {
        // Count current images
        const grid = document.getElementById('imagesGrid');
        const currentCount = grid ? grid.querySelectorAll('.image-item').length : 0;
        
        if (currentCount <= 1) {
            showCustomAlert(
                'Cannot Delete Last Photo',
                'Each trip must have at least one photo. Please upload a new photo before deleting this one.',
                'warning'
            );
            return;
        }

        if (!confirm('Are you sure you want to delete this image?')) {
            return;
        }

        const formData = new FormData();
        formData.append('imageId', imageId);

        fetch('/Admin/DeleteImage', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const imageItem = document.querySelector(`.image-item[data-image-id="${imageId}"]`);
                if (imageItem) {
                    imageItem.style.animation = 'fadeOut 0.3s ease';
                    setTimeout(() => imageItem.remove(), 300);
                }
                
                // Update count
                const remaining = currentCount - 1;
                const title = document.querySelector('.existing-images-title span');
                if (title) title.textContent = `Current Images (${remaining})`;
                
                showCustomAlert('Success', 'Image deleted successfully!', 'success');
            } else {
                showCustomAlert('Error', data.message || 'Failed to delete image', 'error');
            }
        })
        .catch(error => {
            console.error('Delete error:', error);
            showCustomAlert('Error', 'An error occurred while deleting the image', 'error');
        });
    }
    
    // Download image function
    function downloadImage(imageId, fileName) {
        const link = document.createElement('a');
        link.href = `/Admin/DownloadImage?imageId=${imageId}`;
        link.download = fileName || `trip-image-${imageId}.jpg`;
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    }

    // Animation for fade out
    const style = document.createElement('style');
    style.textContent = `
        @@keyframes fadeOut {
            from { opacity: 1; transform: scale(1); }
            to { opacity: 0; transform: scale(0.9); }
        }
    `;
    document.head.appendChild(style);

    // Date Variations Management
    (function(){
        const container = document.getElementById('dateVariationsContainer');
        const addBtn = document.getElementById('addDateVariation');

        if (!container || !addBtn) return;

        // Get the current highest index
        let dateVariationCount = container.querySelectorAll('.date-variation-item').length;

        function addDateVariation() {
            const index = dateVariationCount++;
            const variationHtml = `
                <div class="date-variation-item" data-index="${index}">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="mb-0"><i class="bi bi-calendar3"></i> Date Option ${index + 1}</h6>
                                <button type="button" class="btn btn-sm btn-danger remove-date-variation" data-index="${index}">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Start Date</label>
                                    <input type="date" name="AdditionalDates[${index}].StartDate" class="form-control additional-start-date" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">End Date</label>
                                    <input type="date" name="AdditionalDates[${index}].EndDate" class="form-control additional-end-date" required />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Available Rooms</label>
                                    <input type="number" name="AdditionalDates[${index}].AvailableRooms" class="form-control" min="0" value="10" required />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', variationHtml);
        }

        addBtn.addEventListener('click', addDateVariation);

        // Handle remove buttons using event delegation
        container.addEventListener('click', function(e) {
            const removeBtn = e.target.closest('.remove-date-variation');
            if (removeBtn) {
                const item = removeBtn.closest('.date-variation-item');
                if (item) {
                    item.style.animation = 'fadeOut 0.3s ease';
                    setTimeout(() => item.remove(), 300);
                }
            }
        });
    })();

    // Validate that at least one photo exists before form submission
    function validatePhotoBeforeSubmit(event) {
        const grid = document.getElementById('imagesGrid');
        const existingPhotoCount = grid ? grid.querySelectorAll('.image-item').length : 0;
        const newPhotoInput = document.querySelector('input[type="file"][name="Images"]');
        const hasNewPhotos = newPhotoInput && newPhotoInput.files && newPhotoInput.files.length > 0;
        
        if (existingPhotoCount === 0 && !hasNewPhotos) {
            event.preventDefault();
            showCustomAlert(
                'Cannot Update Trip',
                'The trip cannot be updated without any photos. Please upload at least one photo before saving.',
                'error'
            );
            return false;
        }
        
        return true;
    }

    // Date Validation
    (function(){
        const mainStartDate = document.getElementById('mainStartDate');
        const mainEndDate = document.getElementById('mainEndDate');
        
        // Update main end date minimum when start date changes
        if (mainStartDate && mainEndDate) {
            mainStartDate.addEventListener('change', function() {
                if (this.value) {
                    mainEndDate.min = this.value;
                    // If end date is before new start date, clear it
                    if (mainEndDate.value && mainEndDate.value < this.value) {
                        mainEndDate.value = '';
                    }
                }
            });
            
            // Set initial minimum for end date if start date has value
            if (mainStartDate.value) {
                mainEndDate.min = mainStartDate.value;
            }
        }
        
        // Handle validation for additional date variations using event delegation
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('additional-start-date')) {
                const row = e.target.closest('.row');
                if (row) {
                    const endDateInput = row.querySelector('.additional-end-date');
                    if (endDateInput && e.target.value) {
                        endDateInput.min = e.target.value;
                        // If end date is before new start date, clear it
                        if (endDateInput.value && endDateInput.value < e.target.value) {
                            endDateInput.value = '';
                        }
                    }
                }
            }
        });
    })();

    // Visibility Toggle Initialization
    (function(){
        const toggle = document.getElementById('visibilityToggle');
        const label = document.getElementById('visibilityLabel');
        const isVisible = @(ViewBag.IsVisible?.ToString().ToLower() ?? "false");

        if (toggle && label) {
            // Set initial state
            toggle.checked = isVisible;
            updateLabel();

            // Update label on change
            toggle.addEventListener('change', updateLabel);

            function updateLabel() {
                label.textContent = toggle.checked ? 'Visible to users' : 'Hidden from users';
                label.style.color = toggle.checked ? '#047857' : '#991b1b';
            }
        }
    })();
</script>

