            <span class="itinerary-label">Booked On</span>
            <span id="itineraryBookedOn" class="itinerary-value"></span>
        </div>
        <div class="itinerary-row">
            <span class="itinerary-label">Amount</span>
            <span id="itineraryAmount" class="itinerary-value"></span>
        </div>
        <div class="itinerary-description" id="itineraryDescription"></div>
    </div>
</div>

<script>
    async function openItinerary(button) {
        const bookingId = button.getAttribute('data-booking-id');
        if (!bookingId || bookingId === '0') {
            alert('No itinerary data available for this booking yet.');
            return;
        }

        try {
            const response = await fetch(`/User/Itinerary?bookingId=${bookingId}`);
            if (!response.ok) throw new Error('Unable to load itinerary');
            const data = await response.json();

            document.getElementById('itineraryTitle').textContent = `${data.destination} (${data.packageType})`;
            document.getElementById('itineraryDestination').textContent = `${data.destination}, ${data.country}`;
            document.getElementById('itineraryDates').textContent = `${data.startDate} - ${data.endDate}`;
            document.getElementById('itineraryDuration').textContent = `${data.durationDays} days`;
            document.getElementById('itineraryTravelers').textContent = `${data.travelers}`;
            document.getElementById('itineraryPackage').textContent = data.packageType;
            document.getElementById('itineraryStatus').textContent = data.status;
            document.getElementById('itineraryBookedOn').textContent = data.bookedOn;
            document.getElementById('itineraryAmount').textContent = `$${data.totalPrice.toFixed(2)} (unit $${data.unitPrice.toFixed(2)})`;
            document.getElementById('itineraryDescription').textContent = data.description;

            document.getElementById('itineraryModal').classList.add('show');
        } catch (err) {
            console.error(err);
            alert('Sorry, we could not load the itinerary right now.');
        }
    }

    function downloadItineraryPdf(button) {
        const bookingId = button.getAttribute('data-booking-id');
        if (!bookingId || bookingId === '0') {
            alert('No invoice available for this booking yet.');
            return;
        }
        window.location.href = `/User/ItineraryPdf?bookingId=${bookingId}`;
    }

    function closeItinerary(event) {
        event?.preventDefault();
        document.getElementById('itineraryModal').classList.remove('show');
    }

    function showCancelModal(button) {
        const bookingId = button.getAttribute('data-booking-id');
        const tripId = button.getAttribute('data-trip-id');
        const destination = button.getAttribute('data-destination');
        const quantity = button.getAttribute('data-quantity');

        document.getElementById('cancelBookingId').value = bookingId;
        document.getElementById('cancelTripId').value = tripId;
        document.getElementById('cancelDestination').textContent = destination;
        document.getElementById('cancelQuantity').textContent = quantity;

        document.getElementById('cancelModal').classList.add('show');
    }

    function closeCancelModal() {
        document.getElementById('cancelModal').classList.remove('show');
    }

    async function confirmCancel() {
        const bookingId = document.getElementById('cancelBookingId').value;
        const tripId = document.getElementById('cancelTripId').value;
        const destination = document.getElementById('cancelDestination').textContent;

        closeCancelModal();

        try {
            const response = await fetch('/User/CancelBooking', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ bookingId: parseInt(bookingId), tripId: parseInt(tripId) })
            });

            const result = await response.json();

            if (result.success) {
                showSuccessNotification(destination);
                setTimeout(() => {
                    location.reload();
                }, 2500);
            } else {
                alert(result.message || 'Failed to cancel booking. Please try again.');
            }
        } catch (err) {
            console.error(err);
            alert('An error occurred while cancelling the booking. Please try again.');
        }
    }

    function showSuccessNotification(destination) {
        document.getElementById('successDestination').textContent = destination;
        document.getElementById('successOverlay').classList.add('show');
        document.getElementById('successNotification').classList.add('show');
    }

    function closeSuccessNotification() {
        document.getElementById('successOverlay').classList.remove('show');
        document.getElementById('successNotification').classList.remove('show');
    }

    function filterBookings(status) {
        // Get all trip cards
        const cards = document.querySelectorAll('.trip-card');
        const filterBtns = document.querySelectorAll('.filter-btn');

        // Update active button
        filterBtns.forEach(btn => {
            btn.classList.remove('active');
            if (btn.getAttribute('data-filter') === status) {
                btn.classList.add('active');
            }
        });

        // Filter cards
        cards.forEach(card => {
            const cardStatus = card.getAttribute('data-status');
            
            if (status === 'all') {
                card.classList.remove('hidden');
            } else if (cardStatus === status) {
                card.classList.remove('hidden');
            } else {
                card.classList.add('hidden');
            }
        });

        // Add animation to visible cards
        const visibleCards = document.querySelectorAll('.trip-card:not(.hidden)');
        visibleCards.forEach((card, index) => {
            card.style.animation = 'none';
            setTimeout(() => {
                card.style.animation = `slideInUp 0.6s ease-out ${index * 0.1}s backwards`;
            }, 10);
        });
    }

    // Set default filter to "confirmed" on page load
    document.addEventListener('DOMContentLoaded', () => {
        filterBookings('confirmed');
    });
</script>

