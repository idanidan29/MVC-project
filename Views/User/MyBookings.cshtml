    }

    .cancel-modal-actions {
        display: flex;
        gap: 1rem;
    }

    .btn-cancel-action {
        flex: 1;
        padding: 0.875rem 1rem;
        border-radius: 0.75rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-cancel-no {
        background: rgba(100, 116, 139, 0.1);
        color: #475569;
        border: 2px solid #cbd5e1;
    }

    .btn-cancel-no:hover {
        background: #64748b;
