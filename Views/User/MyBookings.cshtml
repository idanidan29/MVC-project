    @@keyframes successPulse {
        0% {
            transform: scale(0);
            opacity: 0;
        }
        50% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    .success-notification h3 {
        font-size: 1.75rem;
        color: #1e293b;
        margin: 0 0 1rem 0;
        font-weight: 700;
    }

    .success-notification p {
        color: #64748b;
        font-size: 1.05rem;
        line-height: 1.6;
        margin: 0 0 1.5rem 0;
    }

    .success-notification .btn-close-notification {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        border-radius: 0.75rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    }

    .success-notification .btn-close-notification:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
    }

    .success-overlay {
        position: fixed;
        inset: 0;
        background: rgba(15, 23, 42, 0.7);
        backdrop-filter: blur(8px);
        z-index: 1250;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    .success-overlay.show {
        opacity: 1;
        pointer-events: all;
    }
</style>

<!-- Background elements -->
<div class="bookings-bg"></div>

<script>
    // Create floating particles
    for (let i = 0; i < 50; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.width = Math.random() * 5 + 2 + 'px';
        particle.style.height = particle.style.width;
        particle.style.left = Math.random() * 100 + '%';
        particle.style.background = 'white';
        particle.style.borderRadius = '50%';
        particle.style.animationDelay = Math.random() * 20 + 's';
        particle.style.animationDuration = Math.random() * 10 + 15 + 's';
        document.body.appendChild(particle);
    }
</script>

<div class="bookings-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="bi bi-check2-square"></i>
            My Bookings
        </h1>
        <p class="page-subtitle">View all your trips and itineraries</p>
        @if (Model != null && Model.Any())
        {
            <div class="trip-count-badge">
                <i class="bi bi-luggage"></i> @Model.Count @(Model.Count == 1 ? "Booking" : "Bookings")
            </div>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="filter-container">
            <button class="filter-btn active" data-filter="confirmed" onclick="filterBookings('confirmed')">
                <i class="bi bi-check-circle-fill"></i>
                <span>Confirmed</span>
                <span class="filter-count">@Model.Count(t => t.Status == "Confirmed")</span>
            </button>
            <button class="filter-btn" data-filter="all" onclick="filterBookings('all')">
                <i class="bi bi-list-ul"></i>
                <span>All Bookings</span>
                <span class="filter-count">@Model.Count</span>
            </button>
            <button class="filter-btn" data-filter="cancelled" onclick="filterBookings('cancelled')">
                <i class="bi bi-x-circle-fill"></i>
                <span>Cancelled</span>
                <span class="filter-count">@Model.Count(t => t.Status == "Cancelled")</span>
            </button>
            <button class="filter-btn" data-filter="past" onclick="filterBookings('past')">
                <i class="bi bi-clock-history"></i>
                <span>Past Trips</span>
                <span class="filter-count">@Model.Count(t => t.Status == "Past")</span>
            </button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-ticket-detailed"></i>
            </div>
            <h2 class="empty-state-title">No bookings yet</h2>
            <p class="empty-state-text">
                You don't have any confirmed bookings yet. 
                Browse our amazing trips and start planning your next adventure!
            </p>
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                <a href="/Dashboard/Index" class="btn-browse">
                    <i class="bi bi-compass"></i>
                    Explore Trips
                </a>
                <a href="/User/Cart" class="btn-browse" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);">
                    <i class="bi bi-cart"></i>
                    View Cart
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="trips-grid">
            @foreach (var trip in Model)
            {
                var bookingRef = "BK-" + trip.TripID.ToString().PadLeft(5, '0') + "-" + DateTime.Now.Year.ToString().Substring(2);
                <div class="trip-card" data-status="@trip.Status.ToLower()">
                    <div class="trip-image-container">
                        @if (trip.Images.Any())
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(trip.Images.First())" alt="@trip.Destination" class="trip-image" />
                        }
                        else
                        {
                            <div class="no-image-placeholder">
                                <i class="bi bi-image"></i>
                            </div>
                        }
                        @if (trip.Status == "Confirmed")
                        {
                            <span class="status-badge status-confirmed">
                                <i class="bi bi-check-circle-fill"></i>
                                Confirmed
                            </span>
                        }
                        else if (trip.Status == "Cancelled")
                        {
                            <span class="status-badge status-cancelled">
                                <i class="bi bi-x-circle-fill"></i>
                                Cancelled
                            </span>
                        }
                        else if (trip.Status == "Past")
                        {
                            <span class="status-badge status-past">
                                <i class="bi bi-clock-history"></i>
                                Past Trip
                            </span>
                        }
                    </div>

                    <div class="trip-details">
                        <h3 class="trip-destination">@trip.Destination</h3>
                        <div class="trip-country">
                            <i class="bi bi-geo-alt-fill"></i>
                            <span>@trip.Country</span>
                        </div>

                        <!-- Trip Dates -->
                        @{
                            var remaining = trip.StartDate - DateTime.Now;
                            var remainingText = remaining.TotalSeconds <= 0
                                ? "Trip started"
                                : $"{remaining.Days}d {remaining.Hours}h left";
                        }
                        <div class="dates-info">
                            <div class="date-row">
                                <span class="date-label"><i class="bi bi-calendar-event"></i> Start Date:</span>
                                <span class="date-value">@trip.StartDate.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="date-row">
                                <span class="date-label"><i class="bi bi-calendar-event"></i> End Date:</span>
                                <span class="date-value">@trip.EndDate.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="date-row">
                                <span class="date-label"><i class="bi bi-shield-check"></i> Free Cancellation Until:</span>
                                <span class="date-value">@trip.EffectiveCancellationEndDate.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="date-row">
                                <span class="date-label"><i class="bi bi-clock"></i> Time Remaining:</span>
                                <span class="date-value">@remainingText</span>
                            </div>
                            <div class="date-row">
                                <span class="date-label"><i class="bi bi-hourglass-split"></i> Duration:</span>
                                <span class="date-value">@((trip.EndDate - trip.StartDate).Days) days</span>
                            </div>
                            <div class="date-row">
                                <span class="date-label"><i class="bi bi-people-fill"></i> Travelers:</span>
                                <span class="date-value">@trip.Quantity @(trip.Quantity == 1 ? "Person" : "People")</span>
                            </div>
                        </div>

                        <!-- Price Information -->
                        <div class="trip-price-section">
                            <div class="price-container">
                                <span class="trip-price">$@{var total = trip.FinalPrice * (decimal)trip.Quantity;}<text>@total.ToString("N2")</text></span>
                                @if (trip.Quantity > 1)
                                {
                                    <span class="per-trip-note">$@trip.FinalPrice.ToString("N2") per person</span>
                                }
                            </div>
                        </div>

                        <!-- Package Type -->
                        <div style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(52, 211, 153, 0.1)); padding: 0.75rem; border-radius: 0.75rem; margin-bottom: 1rem; border: 1px solid rgba(16, 185, 129, 0.2);">
                            <div style="color: #64748b; font-size: 0.85rem; margin-bottom: 0.25rem;">Package Type</div>
                            <div style="color: #10b981; font-weight: 600; font-size: 1rem;">@trip.PackageType</div>
                        </div>

                        <!-- Trip Description -->
                        <p class="trip-description">@trip.Description</p>

                        <!-- Action Buttons -->
                        @{
                            var bookingId = trip.UserSelectedDates.FirstOrDefault()?.UserTripID ?? 0;
                            var canCancel = trip.Status == "Confirmed" && DateTime.UtcNow.Date <= trip.EffectiveCancellationEndDate.Date;
                        }
                        <div class="trip-actions">
                            <button class="btn-view-details" data-booking-id="@bookingId" onclick="openItinerary(this)">
                                <i class="bi bi-file-earmark-text"></i>
                                View Itinerary
                            </button>
                            <button class="btn-download" data-booking-id="@bookingId" onclick="downloadItineraryPdf(this)">
                                <i class="bi bi-filetype-pdf"></i>
                                Invoice
                            </button>
                            @if (trip.Status == "Confirmed")
                            {
                                @if (canCancel)
                                {
                                    <button class="btn-cancel-booking" 
                                            data-booking-id="@bookingId" 
                                            data-trip-id="@trip.TripID"
                                            data-destination="@trip.Destination"
                                            data-quantity="@trip.Quantity"
                                            onclick="showCancelModal(this)">
                                        <i class="bi bi-x-circle"></i>
                                        Cancel Booking
                                    </button>
                                }
                                else
                                {
                                    <button class="btn-cancel-disabled" disabled title="Cancellation deadline has passed">
                                        <i class="bi bi-lock"></i>
                                        Cannot Cancel
                                    </button>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div id="itineraryModal" class="itinerary-modal" onclick="closeItinerary(event)">
    <div class="itinerary-card" onclick="event.stopPropagation();">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <div class="text-muted" style="font-size: 0.85rem;">Booking itinerary</div>
                <h4 id="itineraryTitle" class="mb-0">Itinerary</h4>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="closeItinerary(event)"><i class="bi bi-x"></i></button>
        </div>
        <div class="itinerary-row">
            <span class="itinerary-label">Destination</span>
            <span id="itineraryDestination" class="itinerary-value"></span>
        </div>
        <div class="itinerary-row">
            <span class="itinerary-label">Dates</span>
            <span id="itineraryDates" class="itinerary-value"></span>
        </div>
        <div class="itinerary-row">
            <span class="itinerary-label">Duration</span>
            <span id="itineraryDuration" class="itinerary-value"></span>
        </div>
        <div class="itinerary-row">
            <span class="itinerary-label">Travelers</span>
            <span id="itineraryTravelers" class="itinerary-value"></span>
        </div>
        <div class="itinerary-row">
            <span class="itinerary-label">Package</span>
            <span id="itineraryPackage" class="itinerary-value"></span>
        </div>
