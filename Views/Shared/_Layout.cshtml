@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/trips.css" asp-append-version="true" />
    <style>
        /* Logged-in navbar styling matching site theme */
        .app-navbar {
            background: linear-gradient(90deg, rgba(99,102,241,0.12), rgba(55,48,163,0.06));
            backdrop-filter: blur(6px);
            border-bottom: 1px solid rgba(226,232,240,0.12);
            padding: 0.4rem 1rem;
            position: sticky;
            top: 0;
            z-index: 1030;
        }
        /* Guest navbar (unauthenticated) - matches but with slightly more prominence */
        .app-navbar.navbar-guest {
            background: linear-gradient(90deg, rgba(99,102,241,0.15), rgba(55,48,163,0.08));
            border-bottom: 1px solid rgba(226,232,240,0.15);
        }
        .app-navbar .navbar-brand { color: white; font-weight:700; }
        .app-navbar .navbar-logo {
            width:44px; height:44px; display:inline-flex; align-items:center; justify-content:center; border-radius:10px;
            background: linear-gradient(135deg,var(--primary),var(--primary-dark)); color:white; box-shadow: var(--shadow-button);
            margin-right:0.5rem; font-size:1.25rem;
        }
        .app-navbar .nav-link { color: white; transition: all .18s ease; font-weight:600; }
        .app-navbar .nav-link:hover { transform: translateY(-3px); color: #e0e7ff; }
        .app-navbar .btn-ghost { background: transparent; border: 1px solid rgba(255,255,255,0.2); color: white; }
        .app-navbar .user-badge { padding: .35rem .6rem; border-radius: .7rem; color: white; }
        .app-navbar .info-link { color: white; }
        @@media (max-width: 767px) { .app-navbar .nav { display:none; } }
    </style>
</head>
<body>
    <!-- Navbar: show for authenticated users with full nav -->
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <nav class="app-navbar">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <a class="navbar-brand d-flex align-items-center text-decoration-none" asp-controller="Dashboard" asp-action="Index">
                    <span class="navbar-logo"><i class="bi bi-geo-alt-fill"></i></span>
                    <span>TravelMate</span>
                </a>
                <ul class="nav ms-3">
                    <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-compass me-2"></i>Trips</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Dashboard?search="><i class="bi bi-search me-2"></i>Search</a></li>
                    <li class="nav-item"><a class="nav-link" href="/User/MyBookings"><i class="bi bi-ticket-perforated me-2"></i>My Bookings</a></li>
                    <li class="nav-item"><a class="nav-link" href="/User/Cart"><i class="bi bi-cart3 me-2"></i>My Cart</a></li>
                    @if (User?.IsInRole("Admin") ?? false)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="AddTrip"><i class="bi bi-plus-circle me-2"></i>Add Trip</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-speedometer2 me-2"></i>Admin</a></li>
                    }
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <a class="me-3 text-decoration-none nav-link info-link" asp-controller="Info" asp-action="Index"><i class="bi bi-info-circle me-2"></i>Info</a>
                <div class="user-badge d-flex align-items-center">
                    <i class="bi bi-person-circle me-2" style="font-size:1.25rem;color:white;"></i>
                    <span class="d-none d-md-inline">Welcome, @(User?.Identity?.Name?.Split('@')[0] ?? "Friend")!</span>
                </div>
                <!-- Prominent logout button for convenience -->
                <a class="btn btn-sm btn-outline-light ms-3 d-none d-md-inline" href="/Login/Logout" title="Sign out">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </a>
            </div>
        </div>
        </nav>
    }
    else
    {
        <!-- Navbar for non-authenticated users - minimal nav with login -->
        <nav class="app-navbar navbar-guest">
            <div class="container-fluid d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand d-flex align-items-center text-decoration-none" asp-controller="Info" asp-action="Index">
                        <span class="navbar-logo"><i class="bi bi-geo-alt-fill"></i></span>
                        <span>TravelMate</span>
                    </a>
                    <ul class="nav ms-3">
                        <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-compass me-2"></i>Trips</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Info" asp-action="Index"><i class="bi bi-info-circle me-2"></i>Info</a></li>
                    </ul>
                </div>
                <div class="d-flex align-items-center">
                    <a class="btn btn-sm btn-outline-light ms-3" href="/Login" title="Sign in">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Login
                    </a>
                </div>
            </div>
        </nav>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/modal-utils.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- PayPal JS SDK (loaded with sandbox client id from configuration) -->
    <script src="https://www.paypal.com/sdk/js?client-id=@Configuration["Payment:PayPal:ClientId"]&currency=@Configuration["Payment:Currency"]"></script>
    @await Html.PartialAsync("_PaymentModal")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
