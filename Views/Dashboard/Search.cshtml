                <p>Try adjusting your filters to find more options</p>
            `;
            tripsGrid.appendChild(emptyState);
        }
    }

    // Update category dropdown options based on other filters (exclude category itself)
    function updateCategoryOptions() {
        const destination = destinationFilter.value.toLowerCase();
        const country = countryFilter.value.toLowerCase();
        const min = minPrice.value ? parseFloat(minPrice.value) : 0;
        const max = maxPrice.value ? parseFloat(maxPrice.value) : Infinity;
        const travelDate = travelDateFilter.value;
        const onlyDiscount = discountOnly.checked;

        // Find categories available when applying all filters except the category filter
        const available = originalData.filter(item => {
            const matchDest = !destination || item.destination.includes(destination);
            const matchCountry = !country || item.country.includes(country);
            const matchPrice = item.price >= min && item.price <= max;
            const matchDate = !travelDate || item.startDate >= travelDate;
            const matchDiscount = !onlyDiscount || item.isDiscount;
            return matchDest && matchCountry && matchPrice && matchDate && matchDiscount;
        }).map(i => i.category).filter(Boolean);

        const unique = Array.from(new Set(available));

        // Rebuild category select while preserving selection if still available
        const prev = categoryFilter.value;
        categoryFilter.innerHTML = '<option value="">All Categories</option>' +
            unique.map(c => `<option value="${c}">${c}</option>`).join('');

        if (prev && unique.includes(prev)) {
            categoryFilter.value = prev;
        } else {
            categoryFilter.value = '';
        }
    }

    // Reset filters
    function resetFilter() {
        destinationFilter.value = '';
        countryFilter.value = '';
        categoryFilter.value = '';
        minPrice.value = '';
        maxPrice.value = '';
        travelDateFilter.value = '';
        discountOnly.checked = false;
        sortBy.value = '';

        // Restore original full list of cards from data model
        tripsGrid.innerHTML = originalData.map(i => i.html).join('');
        tripCount.textContent = originalData.length;
    }

    // Event listeners
    applyFilters.addEventListener('click', applyFilter);
    resetFilters.addEventListener('click', resetFilter);

    // Real-time filtering on input
    // For inputs that affect which categories are available, update category options first
    destinationFilter.addEventListener('input', () => { updateCategoryOptions(); applyFilter(); });
    countryFilter.addEventListener('input', () => { updateCategoryOptions(); applyFilter(); });
    minPrice.addEventListener('input', () => { updateCategoryOptions(); applyFilter(); });
    maxPrice.addEventListener('input', () => { updateCategoryOptions(); applyFilter(); });
    travelDateFilter.addEventListener('change', () => { updateCategoryOptions(); applyFilter(); });
    discountOnly.addEventListener('change', () => { updateCategoryOptions(); applyFilter(); });

    // When category itself changes, just apply filter (options already reflect other filters)
    categoryFilter.addEventListener('change', applyFilter);
    minPrice.addEventListener('input', applyFilter);
    maxPrice.addEventListener('input', applyFilter);
    travelDateFilter.addEventListener('change', applyFilter);
    discountOnly.addEventListener('change', applyFilter);
    sortBy.addEventListener('change', applyFilter);

    // Initialize category options on load
    updateCategoryOptions();
</script>
